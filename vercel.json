{
    "version": 2,
    "builds": [
        {
            "src": "main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/player-summaries",
            "dest": "/api/app.py"
        },
        {
            "src": "/recently-played-games",
            "dest": "/api/app.py"
        },
        {
            "src": "/workshop-stats/<steam_id>",
            "dest": "/api/app.py"
        }
    ],
    "env": {
        "STEAM_API_KEY": "@steam_api_key",
        "STEAM_ID": "@steam_id",
        "STEAM_CUSTOM_ID": "@steam_custom_id",
        "STEAM_APP_ID": "@steam_app_id"
    },
    "redirects": [
        {
            "source": "/",
            "destination": "https://github.com/Nicconike/Steam-Stats"
        }
    ]
}
